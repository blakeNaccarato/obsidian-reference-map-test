{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Establish base config, schedule, and manager defaults.",
  "dependencyDashboardApproval": true,
  "extends": ["config:base", "group:allNonMajor", ":enablePreCommit", ":disableRateLimiting"],
  "schedule": ["on the 16th day of the month"],
  "git-submodules": { "enabled": true },
  "enabledManagers": ["github-actions", "git-submodules"]
}
